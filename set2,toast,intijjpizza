import 'dart:io';
import 'dart:math' as math;

void main() {
  print("Pizza Price List:");
  print("Small: 150 Rs");
  print("Medium: 190 Rs");
  print("Large: 240 Rs\n");

  // Input pizza size
  print("Please enter your pizza size (Small, Medium, Large):");
  String pizzaSize = stdin.readLineSync()!.trim();

  // Input quantity
  print("How many $pizzaSize pizzas do you want?");
  int pizzaQty = int.parse(stdin.readLineSync()!);

  int price = 0;

  // Checking sizes
  if (pizzaSize.toLowerCase() == "small") {
    price = 150;
  } else if (pizzaSize.toLowerCase() == "medium") {
    price = 190;
  } else if (pizzaSize.toLowerCase() == "large") {
    price = 240;
  } else {
    print("Invalid pizza size input!");
    return;
  }

  // Total price
  int total = pizzaQty * price;

  print("\nYour total payment is: â‚¹$total");
}

